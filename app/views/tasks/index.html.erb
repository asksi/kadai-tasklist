<% if logged_in? %>
    
    <h1>タスク一覧</h1>
    
    <ul>
        <% @tasks.each do |task| %>
        <li>
            <%= link_to task.id, task %>
            <%= task.status %>
            &gt;
            <%= task.content %>
        </li>
        <% end %>
        <%= paginate @tasks %>
        
    </ul>
    
<% else %>
    <div>
        <%= link_to "Sign up now!!!!", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
    

<% end %>

